{
    "compilerOptions": {
      "outDir": "build",
      "module": "esnext",
      "target": "es5",
      "lib": ["es6", "dom","es2017"],
      "sourceMap": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDirs": ["src"],
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "declaration": true,
      "esModuleInterop": true
    },
    "exclude": [
      "node_modules",
      "build"
    ]
  }
  